<!doctype html>


<html lang="en-US">
    <head>
        <meta charset="utf-8">
        <title>SAI-DE</title>
        <link href="css/style_login.css" media="screen" rel="stylesheet" type="text/css" />

    </head>

    <body>

        <div id="login-form">
            <h1>Inciar Sesion</h1>
            <fieldset>
                <form action="validar.php" method="get">
                    <input type="text" required value="Usuario" name="usuario" onBlur="if (this.value == '')
                                this.value = 'Usuario'" onFocus="if (this.value == 'Usuario')
                                            this.value = ''"> 
                    <input type="password" required value="Password" name="password" onBlur="if (this.value == '')
                                this.value = 'Password'" onFocus="if (this.value == 'Password')
                                            this.value = ''"> 
                    <br>
                    <br>
                   
                    <input type="submit" value="Ingresar">
                    <footer class="clearfix">
                    </footer>
                </form>
            </fieldset>
        </div> 
    </body>
</html>